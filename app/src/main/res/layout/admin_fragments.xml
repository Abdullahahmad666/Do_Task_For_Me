<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Orders Management"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingBottom="16dp"
            android:textColor="#000" />

        <!-- Order Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="12dp"
            android:elevation="4dp"
            android:backgroundTint="#ffffff"
            android:clipToOutline="true"
            android:layout_margin="4dp"
            android:layout_marginBottom="12dp"
            android:paddingVertical="10dp">

            <!-- Order Details -->
            <TextView
                android:id="@+id/tv_order_id_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order ID: #12345"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tv_customer_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer: John Doe"
                android:textSize="14sp"
                android:paddingTop="2dp"
                android:textColor="#444" />

            <TextView
                android:id="@+id/tv_product_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product: Example Product"
                android:textSize="14sp"
                android:paddingTop="2dp"
                android:textColor="#444" />

            <TextView
                android:id="@+id/tv_quantity_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity: 2"
                android:textSize="14sp"
                android:paddingTop="2dp"
                android:textColor="#444" />

            <TextView
                android:id="@+id/tv_price_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: $50.00"
                android:textSize="14sp"
                android:paddingTop="2dp"
                android:textColor="#444" />

            <!-- Order Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status: "
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#555" />

                <Spinner
                    android:id="@+id/sp_order_status_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/orderstatus"
                    android:layout_marginStart="8dp"
                    android:spinnerMode="dropdown"
                    tools:ignore="TextSize" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
